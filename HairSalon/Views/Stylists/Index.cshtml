@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<div class="container">
    <h1>All Stylists</h1>

    @if(Model.Count == 0)
    {
        <p>No stylists were found in the registry</p>
        
    }
    else
    {
        <ul>
        @foreach(HairSalon.Models.Stylist stylist in Model)
        {
            <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
        }
        </ul>
    }
    <p>Add a stylist @Html.ActionLink("here", "Create").</p>
    <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>